<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
	<configuration debug="true">
		<!-- Appenders -->
		<appender class="ch.qos.logback.core.ConsoleAppender" name="console">
			<encoder>
				<Pattern>%d %5p [%c] %m%n</Pattern>
			</encoder>
		</appender>

		<appender class="ch.qos.logback.core.ConsoleAppender" name="console-infolog">
			<encoder>
				<Pattern>%d %5p %m%n</Pattern>
			</encoder>
		</appender>

		<!-- 로거 -->
		<logger name="board" appender-ref="console" level="DEBUG"/>
		<logger name="jdbc.sqlonly" appender-ref="console-infolog" level="INFO"/>
		
		<!-- 루트 로거 -->
		<root level="DEBUG">
			<appender-ref ref="console"/>
		</root>
	</configuration>